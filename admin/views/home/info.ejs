<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Thông tin</title>

    <!-- Bootstrap -->
    <link href="../css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="../css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="../css/nprogress.css" rel="stylesheet">


    <!-- Custom Theme Style -->
    <link href="../css/custom.min.css" rel="stylesheet">
</head>

<body class="nav-md body-content">
    <div class="container body">
        <div class="main_container">
            <%- include ../partial/sidebar.ejs %>
                <%- include ../partial/header.ejs %>
                    <div class="right_col" role="main">
                        <div class="row x_title">
                            <div class="col-md-3">
                                <h3>Quản lý
                                    <small>Thông tin chung</small>
                                </h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <form id="frAbout" data-parsley-validate action="<%=process.env.site_url%>/admin/info/<%=info? info.id : 0%>" method="post"
                                    class="form-horizontal form-label-left" enctype="application/x-www-form-urlencoded">
                                    <div class="col-md-12" style="border: 1px #eee solid; background-color: #fff; padding: 10px; margin-bottom: 10px">
                                        <a href="about" class="btn btn-primary" type="button">Hủy bỏ</a>
                                        <button type="submit" id="btnSave" class="btn btn-success">Lưu</button>
                                    </div>
                                    <div class="nav-tabs-custom">
                                        <ul class="nav nav-tabs" style="margin-bottom: 20px;">
                                            <li class="active"><a href="#tab_info" data-toggle="tab" aria-expanded="true">Thông tin</a></li>
                                            <li class=""><a href="#tab_socail" data-toggle="tab" aria-expanded="true">Link liên kết mạng xã hội</a></li>
                                            <li class=""><a href="#tab_link" data-toggle="tab" aria-expanded="true">Link tải</a></li>
                                            <li class=""><a href="#tab_title" data-toggle="tab" aria-expanded="true">Tiêu để</a></li>
                                        </ul>
                                        <div class="tab-content">
                                            <div class="tab-pane active" id="tab_info">
                                                <div class="col-md-8">
                                                    <div class="form-group">
                                                        <label>Email</label>
                                                        <input type="text" class="form-control" value="<%=info? info.email : ''%>" name="email" id="email" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Số điện thoại</label>
                                                        <input type="text" class="form-control" value="<%=info? info.phone : ''%>" name="phone" id="phone" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Địa chỉ</label>
                                                        <textarea class="form-control" rows="5" name="address" id="address"><%=info? info.address : ''%></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="tab-pane" id="tab_socail">
                                                <div class="col-md-8">
                                                    <div class="form-group">
                                                        <label>Link FaceBook</label>
                                                        <input type="text" class="form-control" value="<%=info? info.facebook : ''%>" name="facebook" id="facebook" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Link Facebook</label>
                                                        <input type="text" class="form-control" value="<%=info? info.twitter : ''%>" name="twitter" id="twitter" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Link Twitter</label>
                                                        <input type="text" class="form-control" value="<%=info? info.google : ''%>" name="google" id="google" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Link Linkedin</label>
                                                        <input type="text" class="form-control" value="<%=info? info.linkedin : ''%>" name="linkedin" id="linkedin" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Link Printerest</label>
                                                        <input type="text" class="form-control" value="<%=info? info.printerest : ''%>" name="printerest" id="printerest" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="tab-pane" id="tab_link">
                                                <div class="col-md-8">

                                                    <div class="form-group">
                                                        <label>Link Tải Adroid</label>
                                                        <input type="text" class="form-control" value="<%=info? info.linkAdroid : ''%>" name="linkAdroid" id="linkAdroid" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Link Tải IOS</label>
                                                        <input type="text" class="form-control" value="<%=info? info.linkIos : ''%>" name="linkIos" id="prinlinkIosterest" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="tab-pane" id="tab_title">
                                                <div class="col-md-8">
                                                    <div class="form-group">
                                                        <label>Tiêu đề cho header</label>
                                                        <textarea class="form-control" rows="3" name="title_head" id="title_head"><%=info? info.title_head : ''%></textarea>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Tiêu đề cho tải dứng dụng</label>
                                                        <textarea class="form-control" rows="3" name="title_download" id="title_download"><%=info? info.title_download : ''%></textarea>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Tiêu đề cho footer</label>
                                                        <textarea class="form-control" rows="3" name="title_footer" id="title_footer"><%=info? info.title_footer : ''%></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>



                                </form>
                            </div>

                        </div>

                    </div>

                    <!-- /page content -->

                    <!-- footer content -->
                    <%- include ../partial/footer.ejs %>
        </div>
    </div>

    <!-- jQuery -->
    <script src="../js/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="../js/bootstrap.min.js"></script>
    <!-- FastClick -->

    <!-- Custom Theme Scripts -->
    <script src="../js/custom.min.js"></script>
    <script src="../ckeditor/ckeditor.js"></script>
    <script>
        $('.editors').each(function () {

            CKEDITOR.replace(this.id, {
            });
        });
    </script>
    <script>
        $(".language_tab li:first").addClass("active");
        $(".tab-content .tab-pane:first").addClass("in");
        $(".tab-content .tab-pane:first").addClass("active");
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgF').attr('src', e.target.result);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>

</body>

</html>


